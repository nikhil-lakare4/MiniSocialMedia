<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10.0" prefHeight="400.0" prefWidth="600.0"
          style="-fx-background-color: #424242;" vgap="10.0" xmlns="http://javafx.com/javafx/10.0.1"
          fx:controller="MainView.SignInController">
    <columnConstraints>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints/>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <Label text="Welcome, Sign In to Continue" textFill="WHITE" GridPane.columnSpan="2147483647"
               GridPane.halignment="CENTER">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="userName" prefHeight="25.0" prefWidth="129.0" promptText="Username"
                   style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                   GridPane.rowIndex="1"/>
        <PasswordField fx:id="passWord" promptText="Password" style="-fx-background-radius: 15;"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button mnemonicParsing="false" onAction="#onSignIn"
                style="-fx-background-radius: 15; -fx-background-color: cyan;" text="Sign In" GridPane.columnIndex="1"
                GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
        <Label fx:id="label" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
        <Label text="Are You A New User? Create Account." textFill="WHITE" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.rowIndex="5"/>
        <Button mnemonicParsing="false" onAction="#onSignUp"
                style="-fx-background-radius: 15; -fx-background-color: cyan;" text="Sign Up" GridPane.columnIndex="1"
                GridPane.halignment="CENTER" GridPane.rowIndex="6"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
