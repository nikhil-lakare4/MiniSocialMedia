<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #424242;"
            xmlns="http://javafx.com/javafx/10.0.1" fx:controller="MainView.HomeController">
    <left>
        <VBox prefHeight="400.0" prefWidth="265.0" style="-fx-background-color: #212121;" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <ImageView fx:id="imageView" fitHeight="51.0" fitWidth="62.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                        <Label text="Hi, " textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </Label>
                        <Label fx:id="homeLabel" textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="225.0"
                        style="-fx-background-color: #424242; -fx-background-radius: 15;" text="Search"
                        textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#onChats" prefHeight="26.0" prefWidth="225.0"
                        style="-fx-background-color: #424242; -fx-background-radius: 15;" text="Chats" textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="225.0"
                        style="-fx-background-color: #424242; -fx-background-radius: 15;" text="Timeline"
                        textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#onLogout" prefHeight="26.0" prefWidth="225.0"
                        style="-fx-background-color: #424242; -fx-background-radius: 15;" text="Logout"
                        textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </left>
</BorderPane>
